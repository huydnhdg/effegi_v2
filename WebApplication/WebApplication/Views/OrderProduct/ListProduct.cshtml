@model List<WebApplication.Models.E_Product>
@{
    ViewBag.Title = !string.IsNullOrEmpty(ViewBag.title)? ViewBag.title: "Danh mục sản phẩm";
}

<div class="row">
    <div class="container">
        <div class="top-products row">
            @foreach (var item in Model)
            {
                <div class="product-small col-md-3">
                    <div class="col-inner">
                        <div class="box">
                            <div class="box-image">
                                <div class="">
                                    <a href="/dat-hang/@ViewBag.alt/@item.Link">
                                        <img src="@item.Thumnails" />
                                    </a>
                                </div>
                            </div>
                            <div class="box-text text-center">
                                <div class="title-wrapper">
                                    <p class="category text-uppercase">@item.Trademark</p>
                                    <p class="name product-title text-uppercase">
                                        <a href="/dat-hang/@ViewBag.alt/@item.Link">@item.Name</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

