@model WebApplication.Models.B_Process
@{

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thông tin chương trình</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditConfirm", "B_Process", new { area = "Admin" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Createdate)
                @Html.HiddenFor(model => model.Createby)
                <div class="form-group">
                    @Html.DropDownList("Name", new List<SelectListItem>{
                                new SelectListItem { Value = "" , Text = "--Chương trình--" },
                                new SelectListItem { Value = "TD" , Text = "TÍCH ĐIỂM" },
                                new SelectListItem { Value = "CBH" , Text = "CỘNG BẢO HÀNH" }}, Model.Unit, new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Chương trình" } })*@
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.CODE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã chương trình", @readonly = "readonly" } })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Mô tả" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @placeholder = "Số lượng" })
                </div>
                <div class="form-group">
                    @*@Html.TextBoxFor(model => model.Unit, new { @class = "form-control", @placeholder = "Đơn vị" })*@
                    @Html.DropDownList("Unit", new List<SelectListItem>{
                                new SelectListItem { Value = "" , Text = "--Đơn vị--" },
                                new SelectListItem { Value = "điểm" , Text = "Điểm" },
                                new SelectListItem { Value = "tháng" , Text = "Tháng" }}, Model.Unit, new { @class = "form-control" })
                </div>
                <div class="form-group row">
                    @Html.Label("Kích hoạt chương trình", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control col-md-1", @placeholder = "Trạng thái" })
                </div>
                <div class="form-group row">
                    @Html.Label("Ngày chạy", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="input-group date col-md-4" data-date-autoclose="true" data-provide="datepicker" data-date-format="yyyy/mm/dd">
                        @Html.TextBoxFor(model => model.Startdate, "{0:yyyy/MM/dd}", new { @class = "form-control" })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="input-group date col-md-4" data-date-autoclose="true" data-provide="datepicker" data-date-format="yyyy/mm/dd">
                        @Html.TextBoxFor(model => model.Enddate, "{0:yyyy/MM/dd}", new { @class = "form-control" })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary"><i class="ti ti-check"></i> Lưu</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ti ti-close"></i> Thoát</button>
                </div>

            </div>
        }
    </div>
</div>


