@model List<WebApplication.Areas.Admin.Data.ExportViewModel>
@{
    ViewBag.Title = "Accessary";
    int index = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Form</div>
                <div class="card-body">
                    @using (Html.BeginForm("ExportUploadFile", "ABig", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="input-group mb-3">
                            <div class="col-md-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="ti ti-upload"></i> Upload</button>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="col-md-6">
                                <a href="~/File/temp_export.xlsx" class="btn btn-outline-warning"><i class="ti ti-file"></i> File mẫu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã phiếu xuất</th>
                                <th>Trạm</th>
                                <th>Mã Linh kiện</th>
                                <th>Số lượng</th>
                                <th>Ngày đề xuất</th>
                                <th>Ghi chú</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Code</td>
                                    <td>@item.Station</td>
                                    <td>@item.Item_Code</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Orderdate</td>
                                    <td>@item.Note</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Error))
                                        {
                                            <span class="text-danger">@item.Error</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">thành công</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>


