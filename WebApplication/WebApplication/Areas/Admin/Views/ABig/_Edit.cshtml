@model WebApplication.Models.Accessary_Big
@{

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thông tin linh kiện</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditConfirm", "ABig", new { area = "Admin" }))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên linh kiện", @required = "required" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sản phẩm" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @placeholder = "Model" } })
            </div>
            @*<div class="form-group">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giá" } })
        </div>*@
            <div class="form-group">
                @Html.EditorFor(model => model.KeyPrice, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giá trạm" } })
            </div>
            @*<div class="form-group">
            @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giảm giá" } })
        </div>*@
            <div class="form-group">
                @Html.EditorFor(model => model.CountImport, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tổng nhập" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.CountExport, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tổng xuất" } })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary"><i class="ti ti-check"></i> Lưu</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ti ti-close"></i> Thoát</button>
            </div>

        </div>
        }
    </div>
</div>



